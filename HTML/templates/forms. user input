        HTML
 <!-- Make sure the for in <label> matches the <name> in input -->
  
    <!-- single-line text -->
<form>
  <label for="~~">First name:</label><br>
  <input type="text" id="~~" name="~~">
  <br>
  <label for="lname">Last name:</label><br>
  <input type="text" id="lname" name="lname">
</form> 

   <!-- radio button. Only one choice -->
<form>
  <input type="radio" id="~~" name="~~" value="~~">
  <label for="~~">~~</label><br>
  <input type="radio" id="!!" name="!!" value="!!">
  <label for="!!">!!</label><br>
  <input type="radio" id="##" name="##" value="##">
  <label for="##">##</label>
</form>

    <!-- checkboxes. multiple choices -->
<form action="/action_page.php">
 <input type="checkbox" id="~~" name="~~" value="!!!"> /* value is the what is inputted. */
 <label for="~~"> </label><br>
               ...............
 <input type="checkbox" id="!!!" name="!!!" value="!!!">
 <label for="vehicle3"> I have a boat</label><br><br>
</form>
 
     <!-- Submit button -->
 <input type="submit" value="Submit"> /* value can be anythin */
 
     <!-- Button -->
 <input type="button" onclick="alert('Hello World!')" value="Click Me!"> /* value is text */
 
     <!-- Color choice -->
 <form action="/action_page.php">
  <label for="favcolor">Select your favorite color:</label>
  <input type="color" id="favcolor" name="favcolor" value="#ff0000">
</form>
 
     <!-- Date selection -->
<form action="/action_page.php">
  <label for="datemin">Enter a date after 2000-01-01:</label>
  <input type="date" id="datemin" name="datemin" min="2000-01-02"><br><br>  /* min is earliest date allowed */
  <label for="datemax">Enter a date before 1980-01-01:</label>
  <input type="date" id="datemax" name="datemax" max="1979-12-31"><br><br> /* max is latest date allowed */
</form> 
 
    <!-- date and time input -->       
<form action="/action_page.php">
  <label for="birthdaytime">Birthday (date and time):</label>
  <input type="datetime-local" id="birthdaytime" name="birthdaytime">
  <input type="submit" value="Submit">
</form>

    <!-- Email entry -->
<form action="/action_page.php">
  <label for="email">Enter your email:</label>
  <input type="email" id="email" name="email">
</form>

   <!-- File upload/browse --> 
<form action="/action_page.php">
  <label for="myfile">Select a file:</label>
  <input type="file" id="myfile" name="myfile"><br><br>
</form> 

   <!-- Hidden entry -->
<form action="/action_page.php">
  <label for="fname">First name:</label>
  <input type="text" id="fname" name="fname"><br><br>
  <input type="hidden" id="custId" name="custId" value="3487">
</form>

   <!-- Month entry -->
<form action="/action_page.php">
  <label for="bdaymonth">Birthday (month and year):</label>
  <input type="month" id="bdaymonth" name="bdaymonth">
</form>  


   <!-- Number entry -->
<form action="/action_page.php">
  <label for="quantity">Quantity (between 1 and 5):</label>
  <input type="number" id="quantity" name="quantity" min="1" max="5">  /* min and max set limits */
</form>

   <!-- Numerical steps -->
<form action="/action_page.php">
  <label for="quantity">Quantity:</label>
  <input type="number" id="quantity" name="quantity" min="0" max="100" step="10" value="30"> /* step is how much it changes by */
</form>





 
 
 
